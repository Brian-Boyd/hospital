%hr
%h1.tac
  %strong Patients
%br
%h5.tac 
  = link_to "Add New Patient", new_patient_path
%hr
.media
  .media-body
    %table.table.table-hover
      %thead
        %th Name
        %th Disorder
        -if current_user.admin?
          %th 
          %th 
      %tbody
      - @patients.each do |patient|
        %tr
          %td= link_to patient.name, patient_showinfo_path(patient)
          %td= patient.disorder
          -if current_user.admin?
            %td
              %p
                / = link_to 'Edit', edit_patient_path, :class => 'box'
                = link_to 'Edit', root_path, :class => 'box'
            %td
              %p
                = link_to 'Delete', patient, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'box'

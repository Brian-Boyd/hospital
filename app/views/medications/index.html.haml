%hr
%h1.tac
  %strong Medications
%br
%h5.tac 
  = link_to "Add New Medication(FIX)", root_path
%hr
.media
  .media-body
    %table.table.table-hover
      %thead
        %th Name
        %th Description
        -if current_user.admin?
          %th 
          %th 
      %tbody
      -@medications.each do |medication|
        %tr
          %td 
            = medication.name
          %td 
            = medication.description
          -if current_user.admin?
            %td
              %p
                = link_to 'Edit', medication_mededit_path(medication), :class => 'box'
            %td
              %p
                = link_to 'Delete', medication_meddestroy_path(medication), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'box'
